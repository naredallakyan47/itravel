<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add"
    android:background="@color/bg_color">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Place"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:text="Information about the place"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_below="@+id/info"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:hint="Name"
            android:textColorHint="#808080"
            android:textColor="@color/main_color"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_border" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location with latitude and longitude"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:hint="Location"
            android:textColorHint="#808080"
            android:textColor="@color/main_color"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_border" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            >
        </TextView>
        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:hint="Description"
            android:textColorHint="#808080"
            android:textColor="@color/main_color"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_border" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/add_photo1"
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/add"/>


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/add_photo2"
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/add"/>


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/add_photo3"
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/add"/>


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/add_photo4"
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/add"/>


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/add_photo5"
            android:clickable="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/add"/>



        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Add"
            android:backgroundTint="@color/main_color"/>


    </LinearLayout>



    </LinearLayout>
</ScrollView>
</RelativeLayout>